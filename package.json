{
  "name": "nok-mcp-server",
  "version": "1.0.0",
  "description": "Servidor MCP generalista com sistema de plugins multi-linguagem",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && cp -r src/config dist/",
    "start": "node dist/index.js",
    "start:stdio": "node dist/index.js --transport=stdio",
    "start:sse": "node dist/index.js --transport=sse --port=3000",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "plugin:install": "node scripts/install-plugin.js",
    "plugin:create": "node scripts/create-plugin.js",
    "docker:build": "docker build -t nok-mcp-server .",
    "docker:run": "docker run -p 3000:3000 nok-mcp-server"
  },
  "bin": {
    "nok-mcp-server": "./dist/cli.js"
  },
  "keywords": [
    "nok",
    "mcp",
    "model-context-protocol",
    "ai",
    "llm",
    "plugins",
    "typescript",
    "python",
    "php",
    "go",
    "claude",
    "cursor"
  ],
  "author": "Brendown Ferreira <br3n0k@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Br3n0k/nok-mcp-server.git"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^12.0.1",
    "@fastify/rate-limit": "^10.1.1",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "ajv": "^8.17.1",
    "axios": "^1.7.7",
    "bcryptjs": "^2.4.3",
    "boxen": "^8.0.1",
    "chalk": "^5.3.0",
    "chokidar": "^4.0.1",
    "commander": "^12.1.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "fastify": "^5.1.0",
    "glob": "^11.0.0",
    "inquirer": "^12.0.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mime-types": "^2.1.35",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "ora": "^8.1.0",
    "table": "^6.8.2",
    "uuid": "^10.0.0",
    "ws": "^8.18.0",
    "yaml": "^2.5.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/inquirer": "^9.0.7",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/lodash": "^4.17.10",
    "@types/mime-types": "^2.1.4",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.8.1",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "@vitest/coverage-v8": "^2.1.2",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.12.0",
    "nodemon": "^3.1.7",
    "pino-pretty": "latest",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "vitest": "^2.1.2"
  },
  "optionalDependencies": {
    "mongodb": "^6.9.0",
    "mysql2": "^3.11.3",
    "pg": "^8.13.0",
    "redis": "^4.7.0",
    "sqlite3": "^5.1.7"
  },
  "files": [
    "dist",
    "plugins/templates",
    "scripts",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "mcp": {
    "version": "1.0.0",
    "capabilities": {
      "tools": true,
      "resources": true,
      "prompts": true,
      "logging": true
    },
    "transports": [
      "stdio",
      "sse",
      "websocket"
    ],
    "plugins": {
      "directory": "./plugins",
      "autoload": true,
      "languages": [
        "typescript",
        "python",
        "php",
        "go"
      ]
    }
  },
  "config": {
    "default_port": "3000",
    "max_plugins": "50",
    "plugin_timeout": "30000",
    "cache_ttl": "3600"
  }
}
