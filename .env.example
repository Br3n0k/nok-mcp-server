# Servidor MCP
MCP_PORT=3000
MCP_HOST=localhost
MCP_TRANSPORT=sse

# Plugins
PLUGINS_DIR=./plugins
PLUGINS_AUTOLOAD=true
PLUGIN_TIMEOUT=30000

# Cache
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379

# Banco de dados (opcional)
DATABASE_URL=sqlite:./data/mcp.db
POSTGRES_URL=postgresql://user:pass@localhost:5432/mcp

# APIs externas
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
HUGGINGFACE_API_KEY=

# Logs
LOG_LEVEL=info
LOG_FILE=./logs/mcp.log

# Seguran√ßa
JWT_SECRET=your-secret-key
CORS_ORIGIN=*
RATE_LIMIT=100

# PHP Bridge
PHP_ENDPOINT=http://localhost:8081
PHP_AUTH_TOKEN=

# Python Services
PYTHON_EXECUTABLE=python3
PYTHON_VENV=./venv

# Go Services  
GO_BINARY_PATH=./bin
